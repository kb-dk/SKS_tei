            <pb xml:id="s97" n="97" facs="../tns/ill_k21.jpg"/>
            <ptr xml:id="id1a584e2e-ae0d-4f35-9957-d7f4394aab00" type="figure" target="txr.xml#ill_k21"/>
            <hi xml:id="idc965ffb1-099e-4f80-b1d6-1fff91de3e53" rendition="#size2">
              <ref type="commentary" target="kom.xml#tns-401" xml:id="tns-401">
                <hi xml:id="ida5e95534-24a1-41dd-b8f0-55a87ad5beee" rendition="#bol"><pb xml:id="ss147" edRef="#SKS" n="147"/>To nye <choice xml:id="id9ef8e065-ac64-49f2-8d17-3c8c59c0fb6b"><orig xml:id="idd6df012a-f87f-40b1-b19c-03faefabef1d">Sandhedsvidner.</orig><reg xml:id="id78647fb7-857e-4ad8-8b9a-70b60ac099c7">Sandhedsvidner</reg></choice></hi>
